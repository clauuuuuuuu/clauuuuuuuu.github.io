---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";

const projects = await getCollection("projects", ({ data }) => !data.draft);

// Sort by date, newest first
const sortedProjects = projects.sort(
  (a, b) =>
    new Date(b.data.pubDatetime).getTime() -
    new Date(a.data.pubDatetime).getTime()
);
---

<Layout title={`projects | ${SITE.title}`}>
  <Header />
  <Main pageTitle="projects" pageDesc="things i've built">
    <ul>
      {
        sortedProjects.map(({ id, data }) => (
          <li class="border-b border-border py-6 last:border-b-0">
            <a href={`/projects/${id}/`} class="group block">
              {data.thumbnail && (
                <div class="mb-3 w-1/2 overflow-hidden rounded-lg border border-border">
                  {typeof data.thumbnail === "string" ? (
                    <img
                      src={data.thumbnail}
                      alt={data.title}
                      class="h-24 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  ) : (
                    <Image
                      src={data.thumbnail}
                      alt={data.title}
                      class="h-24 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  )}
                </div>
              )}
              <span class="inline-block text-lg font-medium text-accent decoration-dashed underline-offset-4 group-hover:underline">
                {data.title}
              </span>
            </a>
            <p>{data.description}</p>
          </li>
        ))
      }
    </ul>
  </Main>
  <Footer />
</Layout>
